{
    if place_meeting( x, y+1, obj_solid)
    {
        hsp = 0;
    }
    image_speed = 0;
    image_index = 0;
}

if hurt &gt; 0 and deadMode == false
{
    if maxDeadModePoints &gt; 0
    {
        game_add_points(pointReward);
        maxDeadModePoints--;
    }
    deadMode = true;
