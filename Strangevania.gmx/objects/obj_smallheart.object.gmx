    {
        drift = true;
    }
    
    if !place_meeting( x, y+1, obj_solid) and drift
    {
        x = startx+sin_val;
    }
    
    if place_meeting( x, y+vsp, obj_solid)
    {
        while !place_meeting(x, y+sign(vsp), obj_solid)
        {
            y = y + sign(vsp)
        }
        vsp = 0;
    }
    
    y = y + vsp;
